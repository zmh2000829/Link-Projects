<view class="page">
<image src='../../image/0.jpg' class="image"></image>
<view class="block1">
    <view class="title">
        <image src='../../image/5-1.jpg' class="title1"></image>
    </view>
    <view class="table">
        <scroll-view scroll-y="true" style="height:{{0.7*height}}rpx">
        <view class="tr bg-w">
            <view class="th">学工号</view>
            <view class="th">姓名</view>
            <view class="th">成绩</view>
        </view>
        <block wx:for="{{rank_1}}"wx:for-item="item" wx:key="name" >
        <view class="tr bg-g" wx:if="{{index % 2 == 0}}">
            <view class="td">{{item.stuid}}</view>
            <view class="td">{{item.name}}</view>
            <view class="td">{{item.score}}</view>
        </view>
        <view class="tr" wx:else>
            <view class="td">{{item.stuid}}</view>
            <view class="td">{{item.name}}</view>
            <view class="td">{{item.score}}</view>
        </view>
        </block>
    </scroll-view>
    </view>
    <view class="title">您当前排名: {{ranking_1}}</view>
</view>

